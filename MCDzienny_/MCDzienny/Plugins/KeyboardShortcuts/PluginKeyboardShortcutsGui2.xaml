<UserControl x:Class="MCDzienny.Plugins.PluginKeyboardShortcutsGui2" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:l="clr-namespace:MCDzienny.Plugins">
    <FrameworkElement.Resources>
        <ResourceDictionary>
            <l:WidthAdjustmentConverter x:Key="conv" WidthDelta="-12" />
            <l:WidthAdjustmentConverter x:Key="colConv" WidthDelta="-210" />
        </ResourceDictionary>
    </FrameworkElement.Resources>
    <Grid Background="#00000000">
        <ListView Name="keyboardShortcuts" Margin="39.131,10,44.609,35">
            <ListView.View>
                <GridView x:Name="shortcutsList">
                    <GridViewColumn x:Name="commandColumn" Header="Command / Message" Width="{Binding ActualWidth, ElementName=keyboardShortcuts, Mode=OneWay, Converter={StaticResource colConv}}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Width="{Binding Width, ElementName=commandColumn, Mode=OneWay, Converter={StaticResource conv}}" Text="{Binding Path=Command}" TextChanged="TextBox_TextChanged" Initialized="TextBox_Initialized" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn x:Name="shortcutColumn" Header="Shortcut" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Name="shortcut" Width="{Binding Width, ElementName=shortcutColumn, Mode=OneWay, Converter={StaticResource conv}}" Text="{Binding Path=Shortcut}" PreviewKeyDown="ShortcutTextBox_PreviewKeyDown" TextChanged="TextBox_TextChanged_1" Initialized="shortcut_Initialized" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Width="50">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Delete" Tag="{Binding}" Click="Button_Click_1" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Name="applyButton" Content="Apply" Margin="0,0,44.609,10.04" Height="19.96" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="Button_Click_2" />
        <Button Name="newRowButton" Content="+" HorizontalAlignment="Left" Margin="39.131,0,0,10.04" Width="75" Height="19.96" VerticalAlignment="Bottom" Click="Button_Click" />
    </Grid>
</UserControl>